<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticiasActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/titulo_negrita"
                        android:paddingBottom="30dp"
                        android:text="&quot;Museos sin certificados&quot;" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia2" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="5dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:text="Sólo 8 de los 56 museos en Perú tienen certificado de Defensa Civil"
                        android:textAlignment="center"
                        android:textColor="@color/Pale_Silver" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/noticia_texto1"
                                android:textAlignment="center"
                                android:textAppearance="@style/content_text" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="706dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulishbold"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:text="&quot;Aprovechando la tecnología&quot;"
                        android:textAlignment="center"
                        android:textColor="@color/Eerie_Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia3" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="5dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:text="Los museos del mundo aprovechan la explosión digital"
                        android:textAlignment="center"
                        android:textColor="@color/Pale_Silver" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/mulishregular"
                                android:lineSpacingExtra="2sp"
                                android:text="@string/noticia_texto2"
                                android:textAlignment="center"
                                android:textColor="@color/Eerie_Black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="706dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulishbold"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:text="&quot;Museos sin Límites&quot;"
                        android:textAlignment="center"
                        android:textColor="@color/Eerie_Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia1" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="5dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:text="Inés Hernandez Museos sin Límites de TVPeru"
                        android:textAlignment="center"
                        android:textColor="@color/Pale_Silver" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/mulishregular"
                                android:lineSpacingExtra="2sp"
                                android:text="@string/noticia_texto"
                                android:textAlignment="center"
                                android:textColor="@color/Eerie_Black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="706dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulishbold"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:text="&quot;Atención por Semana Santa&quot;"
                        android:textAlignment="center"
                        android:textColor="@color/Eerie_Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia4" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="5dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:text="Semana Santa: Conoce los museos que atenderán durante el feriado"
                        android:textAlignment="center"
                        android:textColor="@color/Pale_Silver" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/mulishregular"
                                android:lineSpacingExtra="2sp"
                                android:text="@string/noticia_texto4"
                                android:textAlignment="center"
                                android:textColor="@color/Eerie_Black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="706dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulishbold"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:text="&quot;Tumbas Reales en Lambayeque&quot;"
                        android:textAlignment="center"
                        android:textColor="@color/Eerie_Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia5" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="5dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:text="El museo Tumbas Reales fue uno de los más visitados en Semana Santa"
                        android:textAlignment="center"
                        android:textColor="@color/Pale_Silver" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/mulishregular"
                                android:lineSpacingExtra="2sp"
                                android:text="@string/noticia_texto5"
                                android:textAlignment="center"
                                android:textColor="@color/Eerie_Black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="706dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulishbold"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:text="&quot;El MALI&quot;"
                        android:textAlignment="center"
                        android:textColor="@color/Eerie_Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/noticia6" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="5dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="10dp"
                        android:text="Museo emblemático El Mali luce restaurado e imponente"
                        android:textAlignment="center"
                        android:textColor="@color/Pale_Silver" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/mulishregular"
                                android:lineSpacingExtra="2sp"
                                android:text="@string/noticia_texto6"
                                android:textAlignment="center"
                                android:textColor="@color/Eerie_Black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:progressTint="@color/Sunglow"
        android:thumbTint="@color/Sunglow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>